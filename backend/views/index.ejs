<!doctype html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>The Estimator</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="css/main.css">
    </head>
    <body>
        <section class="container-fluid bg">
            <section class="row">
                <section class="col-12 col-sm-3 col-md-6">
                    <div class="modal fade" id="estimateDisplayModal" tabindex="-1" role="dialog" aria-labelledby="estimateDisplayModal" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="estimateDisplayModalTitle">Estimation for time elapse</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </section>
            <div class="row">
                <div class="">
                    <form class="form-container">
                        <h5 class="mb-3">Welcome to Covid-19 Estimator</h5>
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" id="data-region" aria-describedby="data-region" placeholder="Region name">
                        </div>
                        <div class="form-group mb-3">
                            <input type="number" class="form-control" id="data-avg-age" placeholder="Average age">
                        </div>
                        <div class="form-group mb-3">
                            <input type="number" class="form-control" id="data-avg-daily-income-in-usd" placeholder="Average daily income in USD">
                        </div>
                        <div class="form-group mb-3">
                            <input type="number" class="form-control" id="data-total-hospital-beds" placeholder="Total Hospital Beds">
                        </div>
                        <div class="form-group mb-3">
                            <input type="number" class="form-control" id="data-population" aria-describedby="data-population" placeholder="population">
                        </div>
                        <div class="form-group mb-3">
                            <input type="number" class="form-control" id="data-time-to-elapse" placeholder="Time To Elapse">
                        </div>
                        <div class="form-group mb-3">
                            <input type="number" class="form-control" id="data-reported-cases" placeholder="Reported Cases">
                        </div>
                        <div class="form-group mb-3">
                            <input type="number" class="form-control" id="data-total-hospital-beds" placeholder="Total Hospital Beds">
                        </div>
                        <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Period type</label>
                        </div>
                        <select class="custom-select" id="inputGroupSelect01">
                            <option selected>Choose...</option>
                            <option value="days">Days</option>
                            <option value="weeks">Weeks</option>
                            <option value="month">Months</option>
                        </select>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block" id="data-go-estimate">Estimate</button>
                    </form>
                </div>           
            </div>
        </section>
        
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        <script src="js/main.js"></script>
    </body>
</html>